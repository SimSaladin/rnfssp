User
   username Text Eq
   password Text
   salt Text
   admin Bool default=false Update
   valid Bool default=false Update
   currentplaylist Text Maybe
   comment Textarea
   UniqueUser username

Blogpost
   time              UTCTime
   poster            Text
   title             Text
   urlpath           Text
   markdown          Markdown
   tags              [Text] default='[]' Update
   rendered          Html
   renderedPreview   Html default='preview_not_available' Update
   previewSame       Bool default=true Update
   UniqueBlogpost urlpath

Blogcomment
   post BlogpostId
   parent BlogcommentId Maybe
   time UTCTime
   user UserId Maybe
   author Text
   website Text Maybe
   content Textarea

BlogTag
   tag String

Board
   name Text
   description Text
   UniqueBoard name

Boardpost
   location BoardId
   parent BoardpostId Maybe
   time UTCTime
   poster Text Maybe
   email Text Maybe
   title Text Maybe
   content Textarea Maybe
   pass Text
   filepath String Maybe
   fileinfo Text Maybe

Playlist
   title Text
   owner UserId
   elems [TupleText]
   created UTCTime
   modified UTCTime
   UniquePlaylist owner title

Filenode
   area Text
   parent FilenodeId Maybe
   isdir Bool
   path Text
   size Text
   modTime UTCTime
   details Text Maybe
   UniqueFilenode area path

