div.test span:nth-child(7) { color:#{seac} }
div.test span:nth-child(8) { color:#{sead} }

div.test span:nth-child(9)  { color:#{seba} }
div.test span:nth-child(10) { color:#{sebb} }
div.test span:nth-child(11) { color:#{sebc} }
