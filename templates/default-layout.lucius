body { padding-top:70px; }
#main { padding:0 10px; }
hr { clear:both; }
div.postop, div.postreply {
  min-height:80px;
  padding:0px 10px;
  float:left;
  clear:both;
}
div.postreply {
  background-color:#505050;
  margin-bottom:5px;
}
.posttitle, .postername, .postdate, .postnumber, .postreply {
  padding-left:5px;
}
span.posttitle { color:#47B979; }
span.postername { color:#F87C7F; }
span.postdate { font-size:80%; }
input#pagesearch { background-color:#505050; }
input#pagesearch:focus { background-color:#B1B1B1; }
/*
