body {
   font-family: sans-serif;
   font-size: 18px;
   background: #303030;
   color: #A8A8A8;
}
#main {
   padding:0 1em;
}
.required { margin: 1em 0; }
.optional { margin: 1em 0; }
label {
   width: 8em;
   display: inline-block;
   color: #5FAFD7;
}
input, textarea { background: #B1B1B1}
textarea { width: 27em; height: 9em;}
ul { list-style: square; }
a { color: #A56; }
a:hover { color: #C58; }
a:active { color: #C58; }
a:visited { color: #943; }
