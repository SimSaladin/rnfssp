label {
   width: 8em;
   display: inline-block;
   color: #5FAFD7;
}
input,
textarea {
   background: #B1B1B1;
   margin-bottom:9px;
}
pre {
   background: #262626;
   color: #A8A8A8;
}
pre#message {
  background:#522525
}
